<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#262626"
        android:gravity="center_horizontal"
        android:id="@+id/layout_feedback">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/feedback_back"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/activity_mimic_title_bar_back_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Feedback"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#262626"
            android:layout_gravity="center"
            android:text="Send"
            android:textColor="#939393"
            android:textAllCaps="false"/>
    </LinearLayout>

<TextView
    android:id="@+id/textview_comment"
    android:layout_below="@+id/layout_feedback"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:text="Comment"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:textColor="#ffffff"
    android:background="#303030"/>

    <EditText
        android:id="@+id/editText_comment"
        android:layout_below="@+id/textview_comment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#262626"
        android:gravity="start"
        android:textColorHint="#666666"
        android:hint="  We want to hear from you.Send us your comments and feedback about Mimic"/>

    <TextView
        android:id="@+id/textview_contact"
        android:layout_below="@+id/editText_comment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Comment"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:background="#303030"/>

    <EditText
        android:id="@+id/editText_contact"
        android:layout_below="@+id/textview_contact"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#262626"
        android:gravity="center_vertical"
        android:textColorHint="#666666"
        android:hint="  Email"/>

</RelativeLayout>
